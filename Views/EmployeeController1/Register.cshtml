@model demoMVCProj.Models.EmployeeModel;

@{
    ViewData["Title"] = "Registeration Form";
}

<div class="container">
    <h1 class="text-primary align-content-center" style="text-align:center;">Registration Form</h1>
    <form asp-action="Register" asp-controller="EmployeeController1" method="post">
        <div class="row">
            <div class="col-md">
                <label for="FirstName">Name : </label>
                <input asp-for="FirstName" placeholder="Manil" class="form-control"/>
            </div>
            <div class="col-md">
                <label for="LastName">Surname : </label>
                <input asp-for="LastName" placeholder="Shah" class="form-control"/>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md">
                <label for="Age">Age : </label>
                <input asp-for="Age" class="form-control" />
            </div>
            <div class="col-md">
                <label for="Gender">Gender : </label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option value="" selected disabled>Select Gender</option>
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Status" value="married">
                        <label class="form-check-label" asp-for="Status">
                            Married
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Status" value="unmarried">
                        <label class="form-check-label" asp-for="Status">
                            Unmarried
                        </label>
                    </div>
            </div>
            <div class="col">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" placeholder="Enter your description" class="form-control"></textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6" style="text-align:center;">
                <input type="submit" value="SUBMIT" class="btn btn-outline-primary" />
            </div>
            <div class="col-3"></div>
        </div>
    </form>
</div>

